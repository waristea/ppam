<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.william.activitylearning.NewAlarmActivity"
    tools:showIn="@layout/activity_new_alarm">

    <ToggleButton
        android:id="@+id/mondayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="M"
        android:textOn="M"
        app:layout_constraintEnd_toStartOf="@+id/tuesdayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/tuesdayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="T"
        android:textOn="T"
        app:layout_constraintEnd_toStartOf="@+id/wednesdayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mondayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/thursdayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="T"
        android:textOn="T"
        app:layout_constraintEnd_toStartOf="@+id/fridayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wednesdayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/wednesdayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="ToggleButton"
        android:textOff="W"
        android:textOn="W"
        app:layout_constraintEnd_toStartOf="@+id/thursdayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tuesdayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/saturdayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="S"
        android:textOn="S"
        app:layout_constraintEnd_toStartOf="@+id/sundayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fridayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/fridayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="F"
        android:textOn="F"
        app:layout_constraintEnd_toStartOf="@+id/saturdayToggle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thursdayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <ToggleButton
        android:id="@+id/sundayToggle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="ToggleButton"
        android:textOff="S"
        android:textOn="S"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/saturdayToggle"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@android:string/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mondayToggle"
        tools:text="@android:string/cancel" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@android:string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sundayToggle"
        tools:text="@android:string/ok" />
</android.support.constraint.ConstraintLayout>
